{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "typings",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "es2015",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "removeComments": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "index.d.ts",
    "node_modules/"
  ]
}
